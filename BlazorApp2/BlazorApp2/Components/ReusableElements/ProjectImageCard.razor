@using BlazorApp2.Components.Layout.ProjectLayout
@using BlazorApp2.Models;

<div class="project-card">
    <div class="img-container">
        <ImgWithHoverCaption></ImgWithHoverCaption>
    </div>
    <div class="text-container">
        <ProjectTitle Title=@title></ProjectTitle>
        <SkillsDisplay SkillList=@SkillList></SkillsDisplay>
    </div>
</div>
                

@code {
    [Parameter]
    public required string title { get; set; }
    [Parameter]
    public required List<Skill> SkillList { get; set; }

}
